
<!DOCTYPE html>
<html>
  <head>
    <title>Simple Twitter</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>
      <%= yield %>
    </div>
    <div id="user_header">
      <% if logged_in? %>
        User: <%= @current_user.name %>
        |
        Following: <%= @current_user.following.count %>
        Followed: <%= @current_user.followers.count %>

        <div style="float:right">
          Options:
          <%= link_to 'Logout', logout_path %> |
          <%= link_to 'Users', users_path %> |
          <%= link_to 'New Tweet', new_tweet_path %>

        </div>
      <% else %>
        <%= link_to "Sign Up", signup_path %>
        <%= link_to "Log In", login_path %>       
      <% end %>
      <hr>
    </div>
    

    <table style="background:LightGray;width:500px;">
     

      <% @tweets.each do |tweet| %>
        <tr>
            <td>
              <div style="height:50px">
                <%= tweet.text %>
                <small style="float:right;position:relative;top:35px">
                  <font size="1">
                    At: <%= tweet.updated_at%>
                    By: <%= tweet.user.name %> <%= link_to 'Show', tweet_path(tweet) %>
                    <%= link_to 'Edit', edit_tweet_path(tweet) %>
                    <%= link_to 'Destroy', tweet_path(tweet),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
                  </font>
                <small>
              </div>
            </td>
            
            <td></td>
        </tr>
      <% end %>
    </table>
  </body>
</html>





